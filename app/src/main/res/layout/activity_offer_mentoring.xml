<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFEF"
    android:padding="15dp"
    tools:context=".OfferMentoringActivity">

    <TextView
        android:id="@+id/courses_mentoringTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Courses I Mentor:"/>

    <ListView
        android:id="@+id/courses_mentoringL"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/courses_mentoringTV"/>

    <TextView
        android:id="@+id/add_coursesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/courses_mentoringL"
        android:text="Add Courses:"/>

    <EditText
        android:id="@+id/add_coursesET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_coursesTV"
        android:hint="new course"
        android:inputType="textAutoComplete"/>


</RelativeLayout>